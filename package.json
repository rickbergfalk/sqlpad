{
  "name": "sqlpad-project",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "fixlint": "npm run fixlint --prefix client && prettier --write '**/*.js'",
    "lint": "npm run lint --prefix client && prettier --check '**/*.js'"
  }
}
